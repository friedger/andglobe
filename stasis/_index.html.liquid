<body>

<a href="https://github.com/commonsguy/andglobe"><img style="position: absolute; top: 0; right: 0; border: 0;" src="https://s3.amazonaws.com/github/ribbons/forkme_right_green_007200.png" alt="Fork me on GitHub"></a>

	<div class="container">
		<div class="sixteen columns">
      <p style="text-align: center">
{% for language in keys %}
        <a href="#{{ language }}">{{ roster[language].name }}</a>
{% unless forloop.last %}
        &mdash;
{% endunless %}
{% endfor %} 
        </p>
			<h1><img style="border: 0; vertical-align: middle" src="images/apple-touch-icon-114x114.png" alt="Global Android Developer Support">Global Android Developer Support</h1>
		</div>


{% for language in keys %}
		<div class="sixteen columns">
			<a name="{{language}}"></a><h2 style="margin-bottom: 10px">{{ roster[language].name }}</h2>
		</div>

		<div class="one-third column">
			<ul class="square">
{% for site in roster[language].sites | sort %}
				<li><a href="{{site.url}}">{{site.name}}</a></li>
{% endfor %} 
			</ul>
		</div>

		<div class="two-thirds column">
			<p>{{ roster[language].description }}</p>
		</div>
{% endfor %} 

